<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableRight="@drawable/icon_required"
        android:drawablePadding="5dp"
        android:text="@string/location_longitude"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/t12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_location_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_frame_bg_with_gray"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:text=""
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/t14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableRight="@drawable/icon_required"
        android:drawablePadding="5dp"
        android:text="@string/location_latitude"
        android:textColor="@color/color_text_black"
        android:textSize="@dimen/t12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_location_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_frame_bg_with_gray"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:text=""
        android:textColor="@color/color_text_title"
        android:textSize="@dimen/t14" />

    <TextView
        android:id="@+id/btn_location_obtain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_frame_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/location_obtain"
        android:textSize="@dimen/t14" />
    <!--上传图片-->
    <TextView
        android:id="@+id/btn_submit_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_btn_bg_blue"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_submit_pic"
        android:textColor="@color/color_title_text"
        android:textSize="@dimen/t14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_bg_gray">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/file_top_line"/>
        <TextView
            android:id="@+id/tv_photo_list"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="照片列表"
            android:textColor="@color/color_text_title"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/upload_picture_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--上传检查记录-->
    <TextView
        android:id="@+id/btn_submit_check_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_btn_bg_blue"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="10dp"
        android:text="@string/btn_submit_check_record"
        android:textColor="@color/color_title_text"
        android:textSize="@dimen/t14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_bg_gray">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/file_top_line"/>
        <TextView
            android:id="@+id/tv_video_list"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="视频列表"
            android:textColor="@color/color_text_title"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/check_record_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/cancel"
            android:background="@drawable/shape_btn_bg_blue"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="提交"
            android:textColor="@color/color_title_text"
            android:textSize="@dimen/t14" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_btn_bg_normal"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:text="取消"
            android:textColor="@color/color_text_tip"
            android:textSize="@dimen/t14" />
    </RelativeLayout>
</LinearLayout>