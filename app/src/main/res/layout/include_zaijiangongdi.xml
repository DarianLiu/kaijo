<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="受理书标号" />

    <EditText
        android:id="@+id/gd_et_mark"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入受理书标号"
        />
    <TextView
        style="@style/textBoldDrawableStyle"
        android:layout_marginTop="12dp"
        android:text="工程名称" />

    <EditText
        android:id="@+id/gd_et_name"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入工程名称"
        />

    <TextView
        style="@style/textBoldDrawableStyle"
        android:layout_marginTop="12dp"
        android:text="工程地址" />

    <EditText
        android:id="@+id/gd_et_address"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入工程地址"
        />

    <TextView
        style="@style/textBoldDrawableStyle"
        android:layout_marginTop="12dp"
        android:text="施工单位" />

    <EditText
        android:id="@+id/gd_et_shigongdanwei"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入施工单位"
        />

    <TextView
        style="@style/textBoldDrawableStyle"
        android:layout_marginTop="12dp"
        android:text="是否有施工许可证" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/gd_spinner_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" />
    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="工程总造价（万元）" />

    <EditText
        android:id="@+id/gd_et_price"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入工程总造价"
        />

    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="形象进度/状态" />

    <EditText
        android:id="@+id/gd_et_jingduzhuangtai"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入形象进度/状态"
        />
    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="建筑面积（万平）" />

    <EditText
        android:id="@+id/gd_jianzhumianji"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入建筑面积（万平）" />

    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="开工日期" />

    <TextView
        android:id="@+id/gd_et_kaigongnriqi"
        style="@style/textTimeStyle"
        android:layout_marginTop="5dp" />

    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="竣工日期" />

    <TextView
        android:id="@+id/gd_et_jungongriqi"
        style="@style/textTimeStyle"
        android:layout_marginTop="5dp" />

    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="建设单位" />

    <EditText
        android:id="@+id/gd_et_jianshedanwei"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入建设单位"
        />
    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="监理单位" />

    <EditText
        android:id="@+id/gd_et_jianlidanwei"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="请输入监理单位"
        />




</LinearLayout>