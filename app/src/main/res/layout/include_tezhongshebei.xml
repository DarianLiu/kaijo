<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        style="@style/textBoldDrawableStyle"
        android:layout_marginTop="12dp"
        android:text="单位名称" />

    <EditText
        android:id="@+id/et_name"
        style="@style/editDefalutStyle"
        android:layout_marginTop="5dp"
        android:hint="@string/hint_name"/>

    <TextView
        style="@style/textBoldStyle"
        android:layout_marginTop="12dp"
        android:text="法定代表人" />

    <EditText
        android:id="@+id/et_farenName"
        android:hint="请输入法定代表人"
        android:layout_marginTop="5dp"
        style="@style/editDefalutStyle"/>

    <TextView
        style="@style/textBoldDrawableStyle"
        android:layout_marginTop="12dp"
        android:text="使用地点" />

    <EditText
        android:id="@+id/et_address"
        android:layout_marginTop="5dp"
        android:hint="@string/hint_address"
        style="@style/editDefalutStyle"
        />


    <LinearLayout
        android:id="@+id/ly_addView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/selector_frame_background"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/add_special"
        android:textSize="@dimen/t14" />
</LinearLayout>