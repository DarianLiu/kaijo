<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/TopBg">

        <TextView
            style="@style/TopTitle"
            android:id="@+id/catalog"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="3dip"
            android:paddingLeft="10dip"
            android:paddingTop="3dip"
            android:text="A" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_item_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />

        <!--<com.grid.im.contactside.RoundImageView
            android:id="@+id/iv_user_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/default_user"
            local:border_inside_color="@color/round_inside_color"
            local:border_outside_color="@color/round_outside_color"
            local:border_thickness="1dp" />-->

        <ImageView
            android:id="@+id/iv_user_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_user"
            android:layout_marginLeft="10dp"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dip"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_user_item_name"
        android:textColor="@color/color_text_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="毛楠楠"
        android:textSize="@dimen/t14" />
    <TextView
        android:id="@+id/tv_intro"
        android:textColor="@color/color_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="自由社区"
        android:textSize="@dimen/t12" />
</LinearLayout>


        <ImageView
            android:id="@+id/iv_user_item_sex"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
    </LinearLayout>

</LinearLayout>